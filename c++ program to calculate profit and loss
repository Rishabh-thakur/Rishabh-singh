int main()
{
clrscr();
float sp,cp,profit,loss;
cout<<"Enter cost price\n";
cin>>cp;
cout<<"Enter selling price\n";
cin>>sp;
   if(sp>cp)
    {
    	profit=sp-cp;
	    cout<<"Profit of "<<profit<<" rupee";
	}	
	else
	{
	    loss=cp-sp;
	    cout<<"Loss of "<<loss<<" rupee";	
	}
}
